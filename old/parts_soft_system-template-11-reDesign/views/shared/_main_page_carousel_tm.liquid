<div class="b-promo-tms">
    <ul class="b-list">
        {% assign truckMakersMenu = 'truckMaker' | menu_by_code %}
        {% for truckMaker in  truckMakersMenu %}
            <li class="b-item">
                <div class="b-tm-logo"><i>
                    <img src="{{truckMaker.icon}}" alt="{{truckMaker.name}}">
                </i></div>
                <div class="b-box">
                    {% for truckLink in truckMaker.childrens %}
                        {% if forloop.index == 1 %}
                            <div class="b-pic"><i>
                                <img src="{{truckLink.icon}}" alt=""></i>
                            </div>
                        {% endif %}
                        {% if forloop.index == 2 %}
                            <div class="b-orig"><a href="{{truckLink.url}}">Оригинальный каталог</a></div>
                        {% endif %}
                        {% if forloop.index == 3 %}
                            <div class="b-tecdoc"><a href="{{truckLink.url}}">Каталог TecDoc</a></div>
                        {% endif %}
                    {% endfor %}
                </div>
            
            </li>
        {% endfor %}
    </ul>
</div>
