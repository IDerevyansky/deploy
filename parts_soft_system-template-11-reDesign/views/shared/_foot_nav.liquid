<div class="b-foot-nav-td">
    {% assign footerMenuItems = 'footerMenu' | menu_by_code %}
    <ul class="b-foot-nav-list">
        {% for menuItem in footerMenuItems %}
        {% if menuItem.childrens %}
            <li><a href="{{menuItem.url}}" {{menuItem.html_attribute}} style="{{menuItem.css_style}}">{{menuItem.name}}</a>
                <ul>
                    {% for subMenuItem in menuItem.childrens %}
                    <li><a href="{{subMenuItem.url}}" target="{{subMenuItem.target_type}}" {{subMenuItem.html_attribute}}
                        style="{{subMenuItem.css_style}}">{{subMenuItem.name}}</a></li>
                    {% endfor %}
                </ul>
            </li>
            {% else %}
            <li>
                <a href="{{menuItem.url}}" target="{{menuItem.target_type}}" {{menuItem.html_attribute}}
                style="{{menuItem.css_style}}">{{menuItem.name}}</a>
            </li>
            {% endif %}
        {% endfor %}
    </ul>
</div>
